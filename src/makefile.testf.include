CLEANFILES += $(CLEAN_FFF_TEST)

FFF_test: $(TEST_BINARY)

FFF_test_check: $(TEST_BINARY) FORCE
	$(MAKE) check-TESTS TESTS=$^

FFF_test_clean : FORCE
	rm -f $(CLEAN_FFF_TEST) $(test_test_FFF_OBJECTS) $(TEST_BINARY)

check-local:
	$(AM_V_at)$(MAKE) $(AM_MAKEFLAGS) -C secp256k1 check

%.json.h: %.json
	@$(MKDIR_P) $(@D)
	@echo "namespace json_tests{" > $@
	@echo "static unsigned const char $(*F)[] = {" >> $@
	@$(HEXDUMP) -v -e '8/1 "0x%02x, "' -e '"\n"' $< | $(SED) -e 's/0x  ,//g' >> $@
	@echo "};};" >> $@
	@echo "Generated $@"

%.raw.h: %.raw
	@$(MKDIR_P) $(@D)
